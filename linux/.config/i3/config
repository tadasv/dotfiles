bindsym $mod+l focus right

# vi bindings for moving windows
bindsym $mod+Control+j move down
bindsym $mod+Control+k move up
bindsym $mod+Control+h move left
bindsym $mod+Control+l move right

# vi bindings for resizing windows
bindsym $mod+Shift+k resize grow height 10 px or 10 ppt
bindsym $mod+Shift+j resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+h resize grow width 10 px or 10 ppt
bindsym $mod+Shift+l resize shrink width 10 px or 10 ppt

# toggle floating window
bindsym $mod+Shift+space floating toggle
# toggle sticky mode. Will show up on all workspaces
bindsym $mod+Shift+s sticky toggle

bindsym XF86AudioLowerVolume exec pulsemixer --set-volume $(($(pulsemixer --get-volume | awk '{ print $1 }') - 5))
bindsym XF86AudioRaiseVolume exec pulsemixer --set-volume $(($(pulsemixer --get-volume | awk '{ print $1 }') + 5))
bindsym XF86AudioMute exec pulsemixer --toggle-mute

# reload configuration
bindsym $mod+Shift+r restart

